<h1>Add animals</h1>
<h3>Add animals from existing files</h3>
<p>
  Upload a zip archive with JSON files in the following format:<br>
  <code>{name: 'name', age: 1, species: 'species'}</code>
</p>
<%= form_tag animals_path, method: :post, multipart: true do %>
  <%= label_tag 'archive', 'Select archive' %>
  <%= file_field_tag 'archive' %>

  <%= submit_tag 'Add!' %>
<% end %>

<br>
<h3>Create your own Animal</h3>
<%= form_for @animal, :url => { :action => "create" } do |f| %>
  <%= f.label "Name" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Age" %><br>
  <%= f.number_field :age %><br>
  <%= f.label "Species" %><br>
  <%= f.text_field :species %><br><br>
  <%= submit_tag "Create" %>
<% end %>